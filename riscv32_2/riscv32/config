
export PATH="$PATH:/opt/riscv64/bin"
export RISCV="/opt/riscv64/"

export PATH="$PATH:/opt/riscv32/bin"
export RISCV="/opt/riscv32/"


./configure --prefix=/opt/riscv64 
make newlib -j
make linux -j
./configure --prefix=/opt/riscv32 --with-arch=rv32im --with-abi=ilp32

./configure --prefix=/opt/riscv32 --with-arch=rv32gc --with-abi=ilp32d


make 

riscv64-unknown-elf-gcc -nostartfiles boot.s main.c -o rv32.elf link.ld -march=rv32im -mabi=ilp32

riscv32-unknown-elf-readelf  -a rv32.elf